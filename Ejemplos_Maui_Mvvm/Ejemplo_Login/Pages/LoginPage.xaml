<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Ejemplo_Login.PageModels"
             x:Class="Ejemplo_Login.Pages.LoginPage"
             x:DataType="pageModels:LoginPageModel"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">

    <VerticalStackLayout Spacing="10" Margin="10">
        
        <Label Text="Bienvenido" VerticalOptions="Center" HorizontalOptions="Center" />

        <StackLayout Spacing="10" Margin="10">
            <Label Text="Usuario"/>
            <Entry Placeholder="Usuario" Text="{Binding Usuario}"/>
        </StackLayout>

        <StackLayout Spacing="10" Margin="10">
            <Label Text="Clave"/>
            <Entry IsPassword="True" Text="{Binding Clave}"/>
        </StackLayout>

        <Button Text="Login" Command="{Binding LoginCommand}" />

    </VerticalStackLayout>
</ContentPage>