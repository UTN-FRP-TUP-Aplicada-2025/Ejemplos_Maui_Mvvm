<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ejemplo_Flyout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ejemplo_Flyout"
    xmlns:pages="clr-namespace:Ejemplo_Flyout.Pages"
    Title="Ejemplo Flyout Page">

    <FlyoutItem Title="Main Page" Icon="home.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Info Page" Icon="info.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:InfoPage}" />
        </Tab>
    </FlyoutItem>
</Shell>
