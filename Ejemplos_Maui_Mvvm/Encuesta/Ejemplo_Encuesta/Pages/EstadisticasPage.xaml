<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Ejemplo_Encuesta.PageModels" 
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Ejemplo_Encuesta.Pages.EstadisticasPage"
             x:DataType="pageModels:EstadisticasPageModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior  EventName="Appearing" Command="{Binding AppearingCommand}" />
    </ContentPage.Behaviors>

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, *,Auto" VerticalOptions="Center" Padding="0,0,10,0">

            <ImageButton Grid.Column="2" BackgroundColor="Transparent" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"  Command="{Binding HelpCommand}" CommandParameter="https://geometriafernando.somee.com/ver-estadistica-help.html">
                <ImageButton.Source>
                    <FontImageSource Glyph="help" FontFamily="MaterialIconsOutlined" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                </ImageButton.Source>
            </ImageButton>

        </Grid>
    </Shell.TitleView>

    <ScrollView Grid.Row="1" Padding="20,30">

        <VerticalStackLayout Spacing="16">

            <!-- estadistica general -->
            
            <Grid RowDefinitions="Auto,*" Padding="0">
                    
                    <VerticalStackLayout Spacing="30">

                        <Label Text="Estadística Encuesta" FontSize="28" FontAttributes="Bold" TextColor="Black"/>

                        <Border BackgroundColor="#F5F5F5" Padding="24" StrokeThickness="0">

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>

                            <VerticalStackLayout Spacing="20">

                                <Label Text="Datos estadísticos" FontSize="22" FontAttributes="Bold" TextColor="Black" Margin="0,0,0,10"/>

                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Encuestados" FontSize="16" TextColor="#757575"/>
                                    <Label Text="{Binding Encuestados}" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
                                </VerticalStackLayout>

                                <!-- Separador -->
                                <BoxView HeightRequest="1" Color="#E0E0E0" HorizontalOptions="Fill"/>

                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Edad Promedio Encuestados" FontSize="16" TextColor="#757575"/>
                                    <Label Text="{Binding EdadPromedio, StringFormat='{0:F0}'}" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
                                </VerticalStackLayout>

                                <!-- Separador -->
                                <BoxView HeightRequest="1" Color="#E0E0E0" HorizontalOptions="Fill"/>

                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Fecha de la consulta" FontSize="16" TextColor="#757575"/>
                                    <Label Text="{Binding Fecha, StringFormat='{0:d/M/yyyy  HH:mm}'}" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
                                </VerticalStackLayout>

                            </VerticalStackLayout>
                        </Border>

                    </VerticalStackLayout>

            </Grid>

            <!-- ultimas encuestas -->

            <VerticalStackLayout Spacing="16">

                <Label Text="Ultimos encuestados" FontSize="22" FontAttributes="Bold" TextColor="#000000"/>

                <CollectionView ItemsSource="{Binding UltimosEncuestados}" SelectionMode="None">

                    <CollectionView.ItemTemplate>

                        <DataTemplate x:DataType="pageModels:DetalleEncuestaPageModel">

                            <Border Margin="0,4" Padding="16,12" StrokeThickness="1.5" Stroke="#CCCCCC" BackgroundColor="White">

                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>

                                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">

                                    <VerticalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                                        <Label Text="{Binding Nombre}" FontSize="16" FontAttributes="Bold,Italic" TextColor="Black"/>
                                        <Label Text="{Binding FechaNacimiento, StringFormat='{0:d/M/yyyy}'}" FontSize="13" FontAttributes="Italic" TextColor="#757575"/>
                                    </VerticalStackLayout>

                                    <ImageButton Grid.Column="1" BackgroundColor="#E0E0E0" WidthRequest="40" HeightRequest="40" CornerRadius="8" VerticalOptions="Center"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.VerEncuestadoCommand}"
                        CommandParameter="{Binding .}">

                                        <ImageButton.Source>
                                            <FontImageSource Glyph="visibility" FontFamily="MaterialIconsOutlined" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                                        </ImageButton.Source>

                                    </ImageButton>

                                </Grid>

                            </Border>

                        </DataTemplate>

                    </CollectionView.ItemTemplate>

                </CollectionView>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>