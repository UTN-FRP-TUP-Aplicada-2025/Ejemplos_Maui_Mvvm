<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:pageModels="clr-namespace:Ejemplo_Encuesta.PageModels"
             x:Class="Ejemplo_Encuesta.Pages.EncuestaPage"
             x:DataType="pageModels:EncuestaPageModel">

    <!--<ContentPage.BindingContext xmlns:pageModels="clr-namespace:Ejemplo_Encuesta.PageModels">
        <pageModels:EncuestaPageModel />
    </ContentPage.BindingContext>-->

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, *,Auto" VerticalOptions="Center" Padding="0,0,10,0">
            <ImageButton Grid.Column="2" BackgroundColor="Transparent" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" Command="{Binding HelpCommand}" CommandParameter="https://geometriafernando.somee.com/registrar-encuesta-help.html">
                <ImageButton.Source>
                    <FontImageSource Glyph="help" FontFamily="MaterialIconsOutlined" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                </ImageButton.Source>
            </ImageButton>
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="Auto,*" HorizontalOptions="Fill" VerticalOptions="Fill">
        
        
        <VerticalStackLayout Grid.Row="1" Padding="30,50" Spacing="30" VerticalOptions="Start">

            <!-- Campo Nombre -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Nombre" FontSize="16" FontAttributes="Bold" TextColor="#2C3E50" Margin="5,0,0,0"/>

                <Border BackgroundColor="White" Padding="0">
                    <Entry x:Name="EntryNombre" Placeholder="Ingrese su nombre completo" Text="{Binding Nombre}"
                           PlaceholderColor="#AAAAAA" TextColor="#2C3E50" FontSize="16" HeightRequest="55" Margin="15,0"/>
                </Border>
            </VerticalStackLayout>

            <!-- Campo Fecha de Nacimiento -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Fecha de Nacimiento" FontSize="16" FontAttributes="Bold" TextColor="#2C3E50" Margin="5,0,0,0"/>

                <Border BackgroundColor="White" Padding="0">
                    <HorizontalStackLayout Spacing="10" Margin="15,0" HeightRequest="55" VerticalOptions="Center">

                        <!-- Icono de calendario -->
                        <Label Text="ðŸ“…" FontSize="22" VerticalOptions="Center"/>

                        <DatePicker x:Name="DatePickerFechaNacimiento" Format="dd/MM/yyyy" TextColor="#2C3E50" FontSize="16"
                                   VerticalOptions="Center" HorizontalOptions="Fill" BackgroundColor="Transparent"/>

                    </HorizontalStackLayout>
                </Border>

            </VerticalStackLayout>

            <!-- Guardar -->
            <Button Text="Guardar" BackgroundColor="#5B8FDE" HeightRequest="60" WidthRequest="220"  HorizontalOptions="Center" Margin="0,40,0,0" Command="{Binding GuardarCommand}" >
                <Button.ImageSource>
                    <FontImageSource Glyph="save" FontFamily="MaterialIconsOutlined" />
                </Button.ImageSource>
            </Button>

        </VerticalStackLayout>

    </Grid>

</ContentPage>