<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ejemplo_Encuesta.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ejemplo_Encuesta"
    xmlns:pages="clr-namespace:Ejemplo_Encuesta.Pages">

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            
            <Image WidthRequest="100">
                <Image.Source>
                    <x:AppThemeBinding Light="header_flyout_light.png" Dark="header_flyout_dark.png"/>
                </Image.Source>
            </Image>
            
            <Label x:Name="lbUsuario" Text="Cuestionario Electr칩nico" Style="{StaticResource FlyoutHeaderLabelStyle}" FontSize="Title" HorizontalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <!--Dise침o items -->

    <Shell.ItemTemplate>
        <DataTemplate>
            <HorizontalStackLayout Padding="10" Spacing="10" VerticalOptions="Center">
                <Image Source="{Binding FlyoutIcon}" WidthRequest="30" HeightRequest="30"  />
                <Label Text="{Binding Title}" Style="{StaticResource FlyoutHeaderLabelStyle}" />
            </HorizontalStackLayout>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.MenuItemTemplate>
        <DataTemplate>
            <HorizontalStackLayout Padding="10" Spacing="10" VerticalOptions="Center">
                <Image Source="{Binding FlyoutIcon}" WidthRequest="30" HeightRequest="30"  />
                <Label Text="{Binding Title}" Style="{StaticResource FlyoutHeaderLabelStyle}" />
            </HorizontalStackLayout>
        </DataTemplate>
    </Shell.MenuItemTemplate>

    <!--<Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10">
            <Button Text="Cerrar Sesi칩n" Command="{Binding LogoutCommand}" ImageSource="{FontImageSource Glyph='logout', FontFamily=MaterialIconsOutlined, Color={AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}, Size=20}"
            ContentLayout="Left, 10" HorizontalOptions="Fill" BackgroundColor="Transparent" TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>-->

    <Shell.FlyoutFooter>
        <HorizontalStackLayout Padding="10" Spacing="10" VerticalOptions="Center">
            <HorizontalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding LogoutCommand}" />
            </HorizontalStackLayout.GestureRecognizers>
            <Image WidthRequest="30" HeightRequest="30">
                <Image.Source>
                    <FontImageSource Glyph="logout" FontFamily="MaterialIconsOutlined" 
                    Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                </Image.Source>
            </Image>
            <Label Text="Cerrar Sesi칩n" Style="{StaticResource FlyoutHeaderLabelStyle}" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Shell.FlyoutFooter>

    <!--Items -->

    <ShellContent Title="Registrar Encuesta" ContentTemplate="{DataTemplate pages:EncuestaPage}" Route="EncuestaPage" >
        <ShellContent.Icon>
            <FontImageSource Glyph="how_to_reg" FontFamily="MaterialIconsOutlined" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        </ShellContent.Icon>
    </ShellContent>

    <ShellContent Title="Ver Estadistica" ContentTemplate="{DataTemplate pages:EstadisticasPage}" Route="EstadisticasPage" >
        <ShellContent.Icon>
            <FontImageSource Glyph="analytics" FontFamily="MaterialIconsOutlined" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        </ShellContent.Icon>
    </ShellContent>

    <MenuItem Text="Politicas de privacidad" Command="{Binding PoliticaCommand}" CommandParameter="https://geometriafernando.somee.com/privacy-policy.html" >
        <MenuItem.IconImageSource>
            <FontImageSource Glyph="privacy_tip" FontFamily="MaterialIconsOutlined" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        </MenuItem.IconImageSource>
    </MenuItem>

   

    <!--De esta manera no va a aparecer en el menu del flyout,
     pero es necesario que sea parte del flyout para poder redireccionar desde el inicio -->
    <ShellContent Title="Login" ContentTemplate="{DataTemplate pages:LoginPage}"  Route="LoginPage" FlyoutItemIsVisible="False" Shell.NavBarIsVisible="False" />

</Shell>
