<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-name:Ejemplo_Views.PageModels"
             x:Class="Ejemplo_Views.Pages.HolaMundoButtonPage"
             x:DataType="pageModels:HolaMundoButtonPageModel"
             Title="HolaMundoButtonPage">
    
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label Text="{Binding Mensaje}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Button x:Name="btnPageHolaMundo" Command="{Binding ClickCommand}" VerticalOptions="Center" IsEnabled="True" Text="Hola Mundo"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>