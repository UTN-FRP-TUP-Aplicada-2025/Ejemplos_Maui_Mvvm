<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Ejemplo_Views.Pages.CustomViews"
             x:Name="this"
             x:Class="Ejemplo_Views.Pages.CustomViews.CardView"
             x:DataType="local:CardView"
             VerticalOptions="Start">

    <Border Padding="16" Stroke="{Binding BorderColor}" StrokeThickness="2" BackgroundColor="{Binding CardBackgroundColor}" StrokeShape="RoundRectangle 12">

        <VerticalStackLayout Spacing="12">

            <!-- Icono {Binding IconImageSource, StringFormat='{{0}}'} -->
            <Border Padding="8" BackgroundColor="{Binding IconBackgroundColor}" StrokeShape="RoundRectangle 8" WidthRequest="60" HeightRequest="60" HorizontalOptions="Start">
                <Image Source="{Binding IconImageSource}" Aspect="AspectFit" WidthRequest="44" HeightRequest="44"/>
            </Border>

            <!-- Título -->
            <Label Text="{Binding CardTitle}" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>

            <!-- Separador -->
            <BoxView BackgroundColor="{Binding BorderColor}"  HeightRequest="1"  HorizontalOptions="FillAndExpand"/>

            <!-- Descripción -->
            <Label Text="{Binding CardDescription}" FontSize="14" TextColor="#666666" LineBreakMode="WordWrap"/>

        </VerticalStackLayout>

    </Border>

</ContentView>